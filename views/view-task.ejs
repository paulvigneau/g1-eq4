<button type="button" class="close" onclick="closePopup()">
    <span aria-hidden="true">&times;</span>
</button>

<form id="edit-task-form" method="post">
    <input type="hidden" name="taskId" id="edit-taskId">

    <div class="form-group">
        <input aria-label="description" type="text" name="description" class="form-control"
               id="edit-description" placeholder="La description de la tâche" required>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="progress m-2">
                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
            </div>

            <div class="border m-2 p-1 definition-of-done">

            </div>

            <div class="m-2">
                <h6>Dépendances <i class="fas fa-pencil-alt text-primary" style="cursor:pointer;" onclick="showDependencies()"></i></h6>
                <div id="dependencies">
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group row m-2">
                <label for="edit-cost" class="col p-0">Coût (minutes)</label>
                <input class="form-control col-4 p-0" type="number" value="0" id="edit-cost" name="cost">
            </div>
            <div class="row m-2">
                <div class="form-group col-8 p-0">
                    <select aria-label="membre" id="edit-members" name="member" class="form-control">

                    </select>
                </div>
                <div class="form-group col-4 p-0">
                    <select aria-label="type de la tâche" id="edit-type" name="type" class="form-control"
                            onchange="renderMembers(<%= JSON.stringify(projectMembers) %>);
                                    renderDod(<%= JSON.stringify(projectDod) %>);">
                        <option>GEN</option>
                        <option>DEV</option>
                        <option>TEST</option>
                    </select>
                </div>
            </div>
            <div class="m-2">
                <h6>User Stories <i class="fas fa-pencil-alt text-primary" style="cursor:pointer;" onclick="showLinkedUserStories()"></i></h6>
                <div id="linked-user-stories"></div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success float-right">Valider</button>
</form>
