<form id="new-member-form" action="/projects/<%= projectId %>/member" method="post">
    <div class="form-group">
        <label for="name">Nom</label>
        <input type="text" name="name" class="form-control" id="name"  placeholder="Nom du membre" required>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Email du membre" required>
    </div>

    <div class="form-group">
        <label for="role">Rôle</label>
        <select id="role" name="role" class="form-control">
            <option>Développeur</option>
            <option>Testeur</option>
            <option>Product Owner</option>
            <option>Scrum Master</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Ajouter</button>
    <button type="button" class="btn btn-danger" onclick="closePopup()">Retour</button>
</form>
